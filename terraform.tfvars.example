# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values

project_name = "my-azure-app"
environment  = "prod"
location     = "West US 2"

# Domain configuration
domain_name = "corp.local"

# Networking configuration
vnet_address_space = ["10.0.0.0/16"]
app_service_subnet_cidr = "10.0.1.0/24"
database_subnet_cidr    = "10.0.2.0/24"
bastion_subnet_cidr     = "10.0.3.0/24"
private_endpoint_subnet_cidr = "10.0.4.0/24"

# App Service configuration
app_service_min_capacity = 1
app_service_max_capacity = 10

# Database configuration
database_name = "appdb"
geo_redundant_backup_enabled = true
zone_redundant = true

# Front Door configuration
waf_enabled = true
waf_mode    = "Prevention"
